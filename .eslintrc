{
  "extends": [
    "react-app",
    "react-app/jest"
  ],
  "rules": {
    "no-console": "warn",
    "prefer-const": "warn",
    "quotes": [
      "warn",
      "single"
    ],
    "jsx-quotes": [
      "warn",
      "prefer-double"
    ],
    "indent": [
      "warn",
      2
    ],
    "max-len": [
      "warn",
      80
    ],
    "semi": [
      "warn",
      "always"
    ],
    "import/order": [
      "warn",
      {
        "groups": [
          "index",
          "sibling",
          "parent",
          "internal",
          "external",
          "builtin",
          "object",
          "type"
        ],
        "newlines-between": "always-and-inside-groups"
      }
    ],
  }
}